<animations>
	<entryAnimation id="idle" speedMultiplier="1">
		<animationFrames spriteImageName="AnimatedThornBushIdle" isLooping="true">
			<animationFrame index="0"/>
			<animationFrame index="1"/>
			<animationFrame index="0"/>
			<animationFrame index="2"/>
		</animationFrames>
		<transitions>
			<transition target="strikeLeft" />
			<transition target="strikeRight" />
			<transition target="die" />
			<transition target="dieInstantly" />
		</transitions>
	</entryAnimation>
	<animation id="strikeLeft" speedMultiplier="20">
		<animationFrames spriteImageName="AnimatedThornBushLeftStrike" isLooping="false">
			<animationFrame index="0"/>
			<animationFrame index="1"/>
			<animationFrame index="2"/>
			<animationFrame index="3"/>
			<animationFrame index="4"/>
		</animationFrames>
		<transitions>
			<transition target="idle" />
			<transition target="strikeLeft" />
			<transition target="strikeRight" />
			<transition target="die" />
			<transition target="dieInstantly" />
		</transitions>
	</animation>
	<animation id="strikeRight" speedMultiplier="20">
		<animationFrames spriteImageName="AnimatedThornBushRightStrike" isLooping="false">
			<animationFrame index="0"/>
			<animationFrame index="1"/>
			<animationFrame index="2"/>
			<animationFrame index="3"/>
			<animationFrame index="4"/>
		</animationFrames>
		<transitions>
			<transition target="idle" />
			<transition target="strikeLeft" />
			<transition target="strikeRight" />
			<transition target="die" />
			<transition target="dieInstantly" />
		</transitions>
	</animation>
	<animation id="die" speedMultiplier="4">
		<animationFrames spriteImageName="AnimatedThornbushDie" isLooping="false">
			<animationFrame index="0"/>
			<animationFrame index="1"/>
			<animationFrame index="2"/>
			<animationFrame index="3"/>
		</animationFrames>
		<transitions>
		</transitions>
	</animation>	
	<animation id="dieInstantly" speedMultiplier="1">
		<animationFrames spriteImageName="AnimatedThornbushDie" isLooping="false">
			<animationFrame index="3"/>
		</animationFrames>
		<transitions>
		</transitions>
	</animation>	
</animations>