
.inventory-slot-cell {
    width: 34px;
    height: 34px;
    background-image: url('project://database/Assets/UI/Images/Inventory/Resources/InventoryGridCell.png');
}

.inventory-slot-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: contain;
    background-repeat: no-repeat;
    opacity: 0.7; 
}

.inventory-slot-overlay-blue {
    background-color: #132137;
}

.inventory-slot-overlay-red {
    background-color: #371313;
}